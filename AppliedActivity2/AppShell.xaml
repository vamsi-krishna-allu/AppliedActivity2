<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppliedActivity2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AppliedActivity2.Views"
    xmlns:local="clr-namespace:AppliedActivity2"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Holidays">
            <ShellContent Title="Holidays List"
                          ContentTemplate="{DataTemplate views:MainPage}" />
            <ShellContent Title="Details"
                          ContentTemplate="{DataTemplate views:HolidayDetailsPage}" />
        </Tab>
    </FlyoutItem>

</Shell>
